<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- red shape -->
    <item

        android:bottom="0dp"
        android:gravity="right|center"
        android:top="3dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="30%"
            android:pivotY="1"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="@color/login_bg" />
                <size
                    android:width="10dp"
                    android:height="10dp" />
            </shape>
        </rotate>
    </item>

    <item
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">
        <shape>
            <corners android:radius="5dp" />
            <solid android:color="@color/login_bg" />
            <size
                android:width="20dp"
                android:height="20dp" />
        </shape>
    </item>



</layer-list>